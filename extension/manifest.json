{
  "manifest_version": 3,
  "name": "MindSwitch",
  "version": "1.0",
  "description": "Domain-Switchable Cognitive Assistant",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
